# Database Configuration
DATABASE_URL=postgresql://your_db_user:your_db_password@localhost:5432/your_database_name
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Security Configuration (CHANGE THESE!)
SECRET_KEY=your-super-secret-key-that-is-at-least-32-characters-long-for-jwt-security
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Docker Environment Variables
POSTGRES_DB=your_database_name
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password_here
DB_PORT=5432
API_PORT=8000

# Attendance Configuration
WORK_START_TIME=10:00
WORK_END_TIME=18:30
LATE_ARRIVAL_THRESHOLD_MINUTES=15

# Leave Configuration
ANNUAL_LEAVE_DAYS=20
SICK_LEAVE_DAYS=12
CASUAL_LEAVE_DAYS=10

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourcompany.com

# Application Configuration
DEBUG=False
ENVIRONMENT=production
APP_NAME=izone-workforce-api
APP_VERSION=1.0.0
HOST=0.0.0.0
PORT=8000

# File Upload Configuration
MAX_UPLOAD_SIZE=5242880
UPLOAD_DIR=uploads

# Pagination Configuration
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100